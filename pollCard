  <body>
    <div class="kk">
      <h1>立喬的抽卡小工具</h1>
      <div class="flxBxRow">
        <div class="rightBox">
          <div class="flxBxCol">
            <h2>請輸入新卡片名稱</h2>
            <textarea name="" id="write" class="txtArea innerFont"></textarea>
            <button class="btn" id="btnAd">加入</button>
          </div>
          <div class="flxBxCol">
            <h2>卡片列表</h2>
            <textarea
              name=""
              id="written"
              class="txtArea innerFont btmMargin"
            ></textarea>
          </div>
        </div>
        <div class="flxBxCol">
          <h2>您這次抽到的卡片</h2>
          <textarea name="" id="showT" class="txtArea innerFont"></textarea>
          <label for="" id="countLeft">剩餘卡片數量:</label>
          <textarea name="" id="arrayLeft"></textarea>
          <br />
          <button class="btnRn" id="btnRn">隨機抽卡</button>
        </div>
      </div>
    </div>
    <script>
      let a = ["香蕉", "蘋果", "鳳梨"];
      let addOrNot = false;

      let btnRn = document.querySelector("#btnRn");

      btnAd.addEventListener("click", () => {
        if (write.value === null || write.value === "") return;
        a.push(write.value);
        write.value = "";
        written.value = addindex();
        countLeft.innerText = "剩餘卡片數量: " + a.length;
        arrayLeft.value = a;
        addOrNot = true;
      });

      let b = [...a];

      btnRn.addEventListener("click", () => {
        if (b.length === 0) {
          showT.value = "";
          alert("卡片抽完了");
          b = [...a];
          countLeft.innerText = "剩餘卡片數量: " + b.length;
          arrayLeft.value = b;
          return;
        }

        if (addOrNot === true) {
          b = [...a];
        }

        let ind = Math.floor(Math.random() * b.length);
        let ele = b[ind];
        showT.value = ele;

        b.splice(ind, 1);
        countLeft.innerText = "剩餘卡片數量: " + b.length;
        arrayLeft.value = b;
        addOrNot = false;
      });

      function addindex() {
        let b = [];
        for (let i in a) {
          b.push(`${parseInt(i) + 1}.` + a[i]);
        }
        let s = b.join("\n");
        return s;
      }
      written.value = addindex();
      countLeft.innerText = "剩餘卡片數量: " + a.length;
      arrayLeft.value = a;
    </script>
